<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChordBuilderActivity"
    android:padding="25dp"
    >

    <LinearLayout
        android:id="@+id/chord_builder_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_wrench"
            android:layout_marginEnd="15dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chord Builder"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_medium"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/chord_builder_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chord_builder_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="1:00"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:fontFamily="@font/montserrat_bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chord_builder_timer"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best: "
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            />
        <TextView
            android:id="@+id/chord_builder_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_regular"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chord_builder_box"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:src="@drawable/img_chord_box"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        >
        <Button
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_tertiary"
            />
        <Button
            android:id="@+id/chord_builder_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_secondary"
            android:text="Close"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            />
    </RelativeLayout>
</RelativeLayout>